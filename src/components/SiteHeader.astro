---
import { SITE_TITLE } from '../consts'

import DropdownWrapper from './DropdownWrapper.astro'
import HeaderLink from './HeaderLink.astro'
import SearchWrapper from './SearchWrapper.astro'
---

<header
  class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white/85 backdrop-blur supports-backdrop-filter:bg-white/85"
>
  <div class="mx-auto flex h-16 max-w-7xl items-center gap-8 px-4">
    <a href="/" class="inline-block text-xl font-medium transition-opacity hover:opacity-80">
      {SITE_TITLE}
    </a>

    <nav class="hidden items-center gap-4 lg:flex">
      <HeaderLink href="/components/application"> Application </HeaderLink>
      <HeaderLink href="/components/marketing"> Marketing </HeaderLink>
      <HeaderLink href="/components/neobrutalism"> Neobrutalism </HeaderLink>
      <HeaderLink href="/blog"> Blog </HeaderLink>
    </nav>

    <div class="flex flex-1 items-center justify-end gap-2">
      <SearchWrapper />

      <a
        href="https://github.com/markmead/hyperui"
        class="inline-flex items-center justify-center gap-2 rounded-md border border-gray-900 bg-gray-900 px-4 py-2 text-sm font-medium text-white transition-colors hover:border-gray-800 hover:bg-gray-800"
        aria-label="GitHub"
        target="_blank"
        rel="noreferrer"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="size-4"
        >
          <path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path>
          <path d="M9 18c-4.51 2-5-2-7-2"></path>
        </svg>

        <span class="hidden md:inline">GitHub</span>
      </a>

      <DropdownWrapper />
    </div>
  </div>
</header>
